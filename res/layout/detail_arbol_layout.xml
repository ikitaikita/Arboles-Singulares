<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:minWidth="400dp"
        android:orientation="vertical" >
         
        <ImageButton
            android:id="@+id/gotoMap"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/desc"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@drawable/go_to_map_style" />

        <TextView
            android:id="@+id/textmapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/gotoMap"
            android:layout_margin="5dip"
            android:layout_marginRight="21dp"
            android:layout_toLeftOf="@+id/gotoMap"
            android:gravity="center"
            android:text="@string/verPunto"
            android:textSize="17sp" />

    </RelativeLayout>

  
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/ButtonVote"
        android:layout_below="@+id/header"            
        android:layout_margin="10dp"
        android:background="@drawable/border"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/ScrollViewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            
              <TextView
		        android:id="@+id/nombreArbol"
		        android:layout_width="match_parent"	
		        android:layout_marginTop="10dp"	       
		       	android:layout_height="wrap_content"	        	
		        android:gravity="center"		       
		        android:textColor="@color/text_titulo"
		        android:text="titulo del arbol" />
              <TextView
		        android:id="@+id/textespecieArbol"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="30dp" 		      
		        android:layout_below="@+id/nombreArbol"
		        android:layout_marginLeft="10dip"		         
		        android:textColor="@color/text_descrip"
		        android:textStyle="bold"
		          />
               <TextView
		        android:id="@+id/nombreCientifico"
		        android:layout_width="match_parent"
		       	android:layout_height="wrap_content"  
		       	android:gravity="left"   
		        android:layout_below="@+id/textespecieArbol"
		        android:layout_marginLeft="10dp"	       
		        android:textColor="@color/text_descrip"
		        />
               <TextView
		        android:id="@+id/textdedscriptionArbol"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="30dp" 		      
		        android:layout_below="@+id/nombreCientifico"
		        android:layout_marginLeft="10dip"		         
		        android:textColor="@color/text_descrip"
		        android:textStyle="bold"
		          />
              
              <TextView
		        android:id="@+id/descriptionArbol"
		        android:layout_width="match_parent"
		       	android:layout_height="wrap_content"  
		       	android:gravity="left"   
		        android:layout_below="@+id/textdedscriptionArbol"
		        android:layout_marginLeft="10dp"	       
		        android:textColor="@color/text_descrip"
		        />
               <TextView
		        android:id="@+id/textprovArbol"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="30dp" 		      
		        android:layout_below="@+id/descriptionArbol"
		        android:layout_marginLeft="10dip"		         
		        android:textColor="@color/text_descrip"
		        android:textStyle="bold"
		          />
               <TextView
		        android:id="@+id/provArbol"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="wrap_content" 		      
		        android:layout_below="@+id/textprovArbol"
		        android:layout_marginLeft="10dip"		         
		        android:textColor="@color/text_descrip"
		          />
                 <TextView
		        android:id="@+id/textmunicipalArbol"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="30dp" 		      
		        android:layout_below="@+id/provArbol"
		        android:layout_marginLeft="10dip"		         
		        android:textColor="@color/text_descrip"
		        android:textStyle="bold"
		          />
               <TextView
		        android:id="@+id/municipalArbol"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="wrap_content" 		      
		        android:layout_below="@+id/textmunicipalArbol"
		        android:layout_marginLeft="10dip"		         
		        android:textColor="@color/text_descrip"
		          />
                <TextView
		        android:id="@+id/textalturaArbol"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="30dp" 		      
		        android:layout_below="@+id/municipalArbol"
		        android:layout_marginLeft="10dip"		         
		        android:textColor="@color/text_descrip"
		        android:textStyle="bold"
		          />
               <TextView
		        android:id="@+id/alturaArbol"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="wrap_content"		      
		        android:layout_below="@+id/textalturaArbol"
		        android:layout_marginLeft="10dip"
		        android:gravity="left"		       
		        android:textColor="@color/text_descrip"
		       />  
		        <TextView
		        android:id="@+id/textdiamArbol"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="30dp" 		      
		        android:layout_below="@+id/alturaArbol"
		        android:layout_marginLeft="10dip"		         
		        android:textColor="@color/text_descrip"
		        android:textStyle="bold"
		          />     
              <TextView
		        android:id="@+id/diamArbol"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/textdiamArbol"
		        android:layout_marginLeft="10dip"
		        android:gravity="left"		       
		        android:textColor="@color/text_descrip"
		         />
                 <TextView
		        android:id="@+id/textedadArbol"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="30dp" 		      
		        android:layout_below="@+id/diamArbol"
		        android:layout_marginLeft="10dip"		         
		        android:textColor="@color/text_descrip"
		        android:textStyle="bold"
		          />   
              <TextView
		        android:id="@+id/edadArbol"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"		      
		        android:layout_below="@+id/textedadArbol"
		        android:layout_marginLeft="10dip"
		        android:gravity="left"		       
		        android:textColor="@color/text_descrip"
		         />
              <com.app.arbolessingulares.internal.ResizableImageView
                android:id="@+id/tapaPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edadArbol"
                            
               />
            
               
              
          </RelativeLayout>
         
    </ScrollView>

    <LinearLayout
        android:id="@+id/ButtonVote"
        android:layout_width="match_parent"
        android:layout_height="70dp"
       
        android:layout_above="@+id/advert"
        android:layout_marginBottom="10dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

