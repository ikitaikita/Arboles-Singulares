<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:paddingBottom="5dp"
    android:layout_marginTop="5dp" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        />
			 
	 <TextView
        android:id="@+id/nombreArbol"
        android:layout_width="fill_parent"
        android:layout_height="25dp"              
        android:layout_margin="5dip"
        android:textColor="@color/text_titulo"
        android:layout_toRightOf="@+id/image"
        android:gravity="center_vertical"
        android:text="al" />
	 
	 <LinearLayout
	    android:id="@+id/provincia"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:layout_below="@+id/nombreArbol"
        android:layout_toRightOf="@+id/image"
        android:orientation="horizontal" >
	        <TextView
	        android:id="@+id/textprovincia"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_margin="5dip"      
	        android:gravity="center_vertical"
	        android:text="Provincia" 
	        android:textSize="17sp"/>
	         <TextView
	        android:id="@+id/provinciaArbol"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_margin="5dip" 
	        android:layout_weight="6"     
	        android:gravity="center_vertical"
	        />
	     
	 </LinearLayout>
	 <LinearLayout
	    android:id="@+id/nombre_comun"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:layout_below="@+id/provincia"
        android:layout_toRightOf="@+id/image"
        android:orientation="horizontal" >
	         
	       
	    <TextView
	        android:id="@+id/textnombre_comun"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_margin="5dip"      
	        android:gravity="center_vertical"
	        android:text="Nombre Comun"
	        android:textSize="17sp"/>
	    <TextView
	        android:id="@+id/comun"
	         android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_margin="5dip" 
	        android:layout_weight="6"     
	        android:gravity="center_vertical"
	        />
	         
	 </LinearLayout>
      <LinearLayout
	    android:id="@+id/altura"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:layout_below="@+id/nombre_comun"
        android:layout_toRightOf="@+id/image"
        android:orientation="horizontal" >
	         
	       
	    <TextView
	        android:id="@+id/textaltura"
	        android:layout_width="wrap_content"	        
	        android:layout_height="wrap_content" 
	        android:layout_margin="5dip"      
	        android:gravity="center_vertical"
	        android:text="Altura"
	        android:textSize="17sp"/>
	    <TextView
	        android:id="@+id/alturaArbol"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_margin="5dip" 
	        android:layout_weight="6"     
	        android:gravity="center_vertical"
	        />
	         
	 </LinearLayout>
	 <LinearLayout
	    android:id="@+id/distancia"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:layout_below="@+id/altura"
        android:layout_toRightOf="@+id/image"
        android:orientation="horizontal" >
	         
	       
	    <TextView
	        android:id="@+id/textdistancia"
	        android:layout_width="wrap_content"	        
	        android:layout_height="wrap_content" 
	        android:layout_margin="5dip"      
	        android:gravity="center_vertical"
	        
	        android:textSize="17sp"/>
	    <TextView
	        android:id="@+id/distanciaArbol"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_margin="5dip" 
	        android:layout_weight="6"     
	        android:gravity="center_vertical"
	        />
	         
	 </LinearLayout>
    

</RelativeLayout>